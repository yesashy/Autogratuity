<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_900"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:spacing="16dp">

        <!-- Today Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/gray_800"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray_800"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    android:text="TODAY"
                    android:textColor="@color/gray_400"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_700" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:columnCount="2"
                    android:rowCount="2">

                    <!-- Stat cards for Today -->
                    <include layout="@layout/item_stat_card"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        app:statLabel="Tips Received"
                        app:statValue="$12.75" />

                    <include layout="@layout/item_stat_card"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        app:statLabel="Pending Tips"
                        app:statValue="2" />

                    <include layout="@layout/item_stat_card"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        app:statLabel="Average Tip"
                        app:statValue="$6.38" />

                    <include layout="@layout/item_stat_card"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        app:statLabel="Deliveries"
                        app:statValue="3" />
                </GridLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 7 Days Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/gray_800"
            app:cardElevation="0dp">

            <!-- Similar structure as Today card -->
            <!-- I'm not including the full layout to keep this response concise -->
            <!-- The structure would be identical to the Today card but with "7 DAYS" title -->
            <!-- and different stat values -->
        </com.google.android.material.card.MaterialCardView>

        <!-- 30 Days Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/gray_800"
            app:cardElevation="0dp">

            <!-- Similar structure as Today card -->
            <!-- Would contain "30 DAYS" title and appropriate stats -->
        </com.google.android.material.card.MaterialCardView>

        <!-- Recent Activity Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/gray_800"
            app:cardElevation="0dp">

            <!-- Card for recent activity with list items -->
        </com.google.android.material.card.MaterialCardView>

        <!-- Best Tipping Areas Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/gray_800"
            app:cardElevation="0dp">

            <!-- Card for best tipping areas -->
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>